generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  name      String?
  role      UserRole @default(STAFF)
  email     String?  @unique
  telephone String?  @unique
}

model Table {
  id       String      @id @default(uuid())
  name     String      @unique
  status   TableStatus @default(IDLE)
  seat     Int
  passcode String
  usage    Usage[]
}

model Order {
  id        String      @id @default(uuid())
  quantity  Int         @default(1)
  price     Float
  status    OrderStatus @default(PENDING)
  menu      Menu        @relation(fields: [menuId], references: [id], onDelete: Cascade)
  menuId    String      @map("menu_id")
  usage     Usage       @relation(fields: [usageId], references: [id], onDelete: Cascade)
  usageId   String      @map("usage_id")
  createdAt DateTime    @default(now())
}

model Menu {
  id     String  @id @default(uuid())
  name   String  @unique
  detail String?
  price  Float
  image  String?
  order  Order[]
}

model Billing {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  subPrice     Float
  totalPrice  Float
  status    BillStatus @default(UNPAID)
  usageId   String     @map("usage_id")
  usage     Usage?      @relation(fields: [usageId], references: [id])
}

model Usage {
  id        String    @id @default(uuid())
  start     DateTime
  end       DateTime?
  order     Order[]
  Billing   Billing[]
  table     Table?    @relation(fields: [tableId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tableId   String?

}

model Setting {
  id    String      @id @default(uuid())
  name  String      @unique
  value String
  type  SettingType @default(STRING)
}

enum TableStatus {
  IDLE
  EATING
}

enum BillStatus {
  PAID
  UNPAID
  CANCELED
}

enum OrderStatus {
  PENDING
  FINISHED
  SERVED
  CANCELED
}

enum SettingType {
  STRING
  NUMBER
  BOOLEAN
}

enum UserRole {
  MANAGER
  CHEF
  STAFF
}
